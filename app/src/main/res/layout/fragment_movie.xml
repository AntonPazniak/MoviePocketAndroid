<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.movie.MovieFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_poster_and_back" />

            <include layout="@layout/item_movie_details" />

            <include layout="@layout/item_assessment" />

            <include layout="@layout/item_rating" />

            <include layout="@layout/item_text_view" />

            <include layout="@layout/item_recycler_view_images" />

            <include layout="@layout/item_youtube_player" />

            <include
                android:id="@+id/view0"
                layout="@layout/item_text_recycler" />

            <include
                android:id="@+id/view1"
                layout="@layout/item_text_recycler" />

            <include
                android:id="@+id/listView"
                layout="@layout/item_buttons_recycler" />

            <include
                android:id="@+id/reviewView"
                layout="@layout/item_buttons_recycler" />

            <include
                android:id="@+id/postView"
                layout="@layout/item_buttons_recycler" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>
